---
interface Props {
  name: string;
}

const { name } = Astro.props;

// Import tag colors from a separate file
import { tagColors } from '../utils/tagColors';

const getTagColor = (tagName: string) => {
  return tagColors[tagName] || 'bg-neutral-200 text-neutral-700 dark:bg-neutral-700 dark:text-neutral-200';
};

const tagColor = getTagColor(name);
---

<span class={`inline-block px-2 py-1 text-xs font-semibold rounded-full ${tagColor} transition-shadow duration-300`}>
  {name}
</span>